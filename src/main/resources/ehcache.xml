<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <persistence directory="spring-test/.cache"/>

    <cache alias="tran" uses-template="heap-cache">
        <key-type>java.lang.Long</key-type>
        <value-type>com.hello.persistence.model.TransactionDTO</value-type>
    </cache>

    <cache alias="trans" uses-template="heap-cache">
        <key-type>java.lang.Object</key-type>
        <value-type>java.util.List</value-type>
    </cache>

    <cache-template name="heap-cache">
        <expiry>
            <ttl unit="minutes">10</ttl>
        </expiry>
        <listeners>
            <listener>
                <class>com.hello.config.CacheEventLogger</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>UPDATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
                <events-to-fire-on>REMOVED</events-to-fire-on>
                <events-to-fire-on>EVICTED</events-to-fire-on>
            </listener>
        </listeners>
        <resources>
            <heap unit="entries">20</heap>
            <offheap unit="MB">1</offheap>
            <disk unit="MB" persistent="true">100</disk>
        </resources>
    </cache-template>

</config>
